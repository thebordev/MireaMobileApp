<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:gravity="center"
            android:text="15 марта (среда)"
            android:textColor="?attr/text_color"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/action_container_schedule"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/bg_dialog"
        android:backgroundTint="?attr/bg_table_shedule"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_schedule_item_left_bar"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/gradient_start_color"
                android:background="@drawable/schedule_item_left_bar"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/time_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/tv_schedule_item_time_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="gravity"
                        android:layout_gravity="right"
                        android:text="9:00"
                        android:textSize="13sp"
                        android:textColor="@color/dark_text_color_primary"/>

                    <TextView
                        android:id="@+id/tv_schedule_item_time_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:textAlignment="gravity"
                        android:layout_gravity="right"
                        android:text="10:30"
                        android:textSize="13sp"
                        android:textColor="?attr/text_color"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/schedule_circle"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:id="@+id/vertical_line"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-6dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="18dp"
                    android:background="?attr/bg_table_shedule"
                    android:backgroundTint="?attr/text_color"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="0dp">

                    <FrameLayout
                        android:id="@+id/circle_shape"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/schedule_circle">

                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Зуев.А.С"
                            android:textColor="?attr/text_color"
                            android:fontFamily="@font/ubuntu_medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="доцент"
                            android:fontFamily="@font/ubuntu"
                            android:textColor="?attr/text_color"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:text="Д"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:textColor="?attr/text_color"/>

                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="Объектно-ориентированное программирвоание"
                    android:textColor="?attr/text_color"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>