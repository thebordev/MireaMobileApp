<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frgaments.MapFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:id="@+id/map_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>


    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="@dimen/_2sdp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="5dp"
        android:background="@drawable/corners_hat_shedule"
        android:backgroundTint="@color/color_bg_notes"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/btn_fl4"
            android:background="@drawable/corners_bg_map_unselected"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textFloor_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:padding="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_fl3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@drawable/corners_bg_map_unselected"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textFloor_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:padding="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_fl2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@drawable/corners_bg_map_unselected"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textFloor_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:padding="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_fl1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@drawable/corners_bg_map_unselected"
            android:layout_margin="2dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textFloor_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:padding="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_fl0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:background="@drawable/corners_bg_map_unselected"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textFloor_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:padding="10dp"/>

        </LinearLayout>


    </LinearLayout>


</FrameLayout>