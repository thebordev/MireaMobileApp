<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="?attr/background_color"
    android:layout_height="match_parent"
    tools:context=".Frgaments.Explorer.news.NewsDetails">

    <androidx.cardview.widget.CardView
        android:id="@+id/eventMainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:cardBackgroundColor="?attr/bg_table_shedule"
        app:cardCornerRadius="20dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:background="@drawable/bg_dialog"
                android:orientation="vertical">

                <ImageView
                    android:transitionName="imageNews"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hatters"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_dialog"
                    android:backgroundTint="?attr/bg_table_shedule"
                    android:orientation="vertical">

                    <TextView
                        android:transitionName="titleNews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Открыт приём научных докладов на V Международную научно-практическую конференцию «Радиоинфоком – 2021»"
                        android:fontFamily="@font/ubuntu_bold"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="?attr/text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="40dp"
                            android:elevation="@dimen/_10sdp">

                            <ImageView
                                android:transitionName="authorImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/mosit"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="МОСИТ"
                                android:textColor="?attr/text_color"
                                android:fontFamily="@font/ubuntu_bold"/>

                            <TextView
                                android:transitionName="dateNews"
                                android:id="@+id/dateNews"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Март 16, 2021"
                                android:elevation="8dp"
                                android:fontFamily="@font/ubuntu_medium"
                                android:textColor="@color/icon_false"/>
                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/newsDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="?attr/text_color"
                        android:fontFamily="@font/ubuntu"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/newsDEs"
                        android:textSize="@dimen/_13sdp"
                        android:paddingBottom="@dimen/_10sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_dialog"
                            android:layout_margin="@dimen/_10sdp"
                            android:padding="@dimen/_10sdp"
                            android:gravity="center"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_baseline_favorite_24"
                                app:tint="?attr/text_color" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_dialog"
                            android:layout_margin="@dimen/_10sdp"
                            android:padding="@dimen/_10sdp"
                            android:gravity="center"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_outline_menu_book_24"
                                app:tint="?attr/text_color"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_gravity="center"
        android:weightSum="10"
        >

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog"
            android:backgroundTint="?attr/bg_table_shedule"
            android:elevation="30dp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_close_24"
            app:tint="?attr/text_color" />


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:backgroundTint="@color/color_cat_2_explorer"
            app:cornerRadius="20dp"
            android:elevation="10dp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/bg_dialog"
            android:text="ПОДЕЛИТЬСЯ"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="@color/ligh_medium_gray"/>

    </LinearLayout>

</LinearLayout>