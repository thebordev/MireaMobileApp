<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/itemNews"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    android:backgroundTint="?attr/bg_table_shedule"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageAuthorNews"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/mosit"/>

            <TextView
                android:id="@+id/titleNews"
                android:layout_width="match_parent"
                android:elevation="8dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Примите участие в масштабном опросе-исследовании РТУ МИРЭА «Я в теме!»"
                android:textColor="?attr/text_color"
                android:maxLines="4"
                android:fontFamily="@font/ubuntu_bold"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/dateNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Март 16, 2021"
                android:elevation="8dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/icon_false"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <ImageView
                android:id="@+id/iamgeNews"
                android:elevation="@dimen/_100sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/event_bg"
                android:scaleType="centerCrop"
                android:transitionName="newsImage"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>




</androidx.cardview.widget.CardView>