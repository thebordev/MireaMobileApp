<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="text_color">@color/light_text_color</item>
        <item name="bg_table_shedule">@color/bg_table_shedule_light</item>
        <item name="background_color">@color/light_bg_color</item>
    </style>

    <!--    here we define dark theme style -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="text_color">@color/dark_text_color</item>
        <item name="bg_table_shedule">@color/bg_table_shedule_dark</item>
        <item name="background_color">@color/dark_bg_color</item>
        <item name="android:textColorSecondary">@color/dark_icon_tint_color</item>
        <item name="text_hint_color">@color/dark_icon_tint_color</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:colorBackground">@color/dark_bg_color</item>
    </style>

    <style name="ThemeOverlay.search" parent="AppTheme">
        <!-- Text color -->
        <item name="android:editTextColor">#ffffff</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">#cbcbcb</item>

    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>