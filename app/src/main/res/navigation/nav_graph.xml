<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ic_shedule">

    <fragment
        android:id="@+id/ic_map"
        android:name="com.example.mireaapp.Frgaments.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/ic_deadline"
        android:name="com.example.mireaapp.Frgaments.Notes.NotesFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_notes" />
    <fragment
        android:id="@+id/ic_shedule"
        android:name="com.example.mireaapp.Frgaments.SheduleFragment"
        android:label="fragment_shedule"
        tools:layout="@layout/fragment_shedule" />
    <fragment
        android:id="@+id/ic_explorer"
        android:name="com.example.mireaapp.Frgaments.News.NewsListFragment"
        android:label="fragment_news_details"
        tools:layout="@layout/fragment_news_details_fragmenet" />
    <fragment
        android:id="@+id/ic_account"
        android:name="com.example.mireaapp.Frgaments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.mireaapp.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.mireaapp.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>

</navigation>